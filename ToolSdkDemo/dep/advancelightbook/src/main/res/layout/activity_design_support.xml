<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main_design_support"
    tools:context="com.lmhu.advancelight.book.chapter2.Designsupportlibrary.DesignsupportActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/bt_snackbar"
        android:layout_centerInParent="true"
        android:text="snackbar_desigin"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/bt_textInputLayout"
        android:layout_below="@+id/bt_snackbar"
        android:layout_marginTop="10dp"
        android:text="textInput"
        android:layout_centerHorizontal="true"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_design"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:clickable="true"
        android:src="@drawable/ic_record"

        app:backgroundTint="#3F51B5"
        app:elevation="3dp"
        app:pressedTranslationZ="6dp"
        />
</RelativeLayout>
